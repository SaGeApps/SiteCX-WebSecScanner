FROM ubuntu:16.04

#LABEL MAINTAINER Michael Laccetti <michael@laccetti.com> <https://laccetti.com/)



RUN apt-get update  && \
        apt-get install -y python3-pip



COPY ./requirements.txt /opt/WebSecurity/requirements.txt

WORKDIR /opt/WebSecurity


RUN pip3 install -r requirements.txt





COPY * /opt/WebSecurity/
RUN ls
EXPOSE 7444

CMD [ "python3 program.py" ]
